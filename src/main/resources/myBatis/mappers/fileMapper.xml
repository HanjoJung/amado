<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="fileMapper">
	
	<select id="list" parameterType="FileDTO" resultType="FileDTO">
		select * from image
		where kind = #{kind} and num = #{num}
		order by fnum asc
	</select>
	
	<insert id="insert" parameterType="FileDTO">
		insert into image
		values(image_seq.nextval, #{num}, #{fname}, #{oname}, #{kind})
	</insert>
	
	<delete id="delete" parameterType="FileDTO">
		delete image
		where
		<if test="fnum != null and fnum !=0">fnum = #{fnum}</if>
		<if test="num != null and num !=0">num = #{num}</if>
	</delete>
	
</mapper>